<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    
    tools:context="nuevasociedad.origenes.Busqueda" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/idea1"
        android:scaleType="fitXY"
        android:src="@drawable/idea1" />
    
    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/idea1"
            
            android:layout_below="@id/imageView1"
            
            android:textSize="21sp" />
    
    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/textView1"
            android:textColor="#D2691E"
            android:text="@string/idea2"
            
            
            android:textSize="20sp" />
    
    <Button
        android:id="@+id/button1"
        android:layout_below="@id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_weight="1.87"
        android:onClick="PasarActividad"
        android:text="Peenemunde" 
        android:background="#1E90FF" />
    
    <Button
        android:id="@+id/button2"
        android:layout_below="@id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.87"
        android:layout_marginTop="13dp"
        android:onClick="PasarActividad2"
        android:text="Bletchley" 
        android:background="#00aa00" />
    
    <Button
        android:id="@+id/button3"
        android:layout_below="@id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.87"
        android:layout_marginTop="13dp"
        android:onClick="PasarActividad3"
        android:text="Manhattan" 
        android:background="#DAA520" />
    

</RelativeLayout> 
